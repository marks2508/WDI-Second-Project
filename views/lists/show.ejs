<div class="container">
  <div class="row">
    <div class="col-md-4">
      <div class="card" style="width: 18rem;">
        <h3 class="card-header"><%= list.country %></h3>
        <img class="card-img-top" src="<%= list.image %>" alt="Card image cap">
        <div class="card-body">
          <p class="card-text">Year adopted: <%= list.adopted %></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Flag notes: <%= list.adopted %></li>
          <li class="list-group-item">Historical fact: <%= list.listNote %></li>
        </ul>
        <div class="card-body">
          <a href="/lists" class="btn btn-primary">Back to lists</a>
          <a href="/lists/<%= list.id %>/edit" class="btn btn-primary">Edit list</a>
        </div>
      </div>
    </div>
  </div>
</div>
